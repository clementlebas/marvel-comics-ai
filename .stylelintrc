{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-prettier"
  ],
  "plugins": [
    "stylelint-prettier"
  ],
  "rules": {
    "prettier/prettier": true,
    "max-nesting-depth": [
      1,
      {
        "ignore": [
          "pseudo-classes",
          "blockless-at-rules"
        ]
      }
    ],
    "selector-nested-pattern": "^&:"
  }
}

